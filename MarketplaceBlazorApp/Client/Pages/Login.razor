@page "/login"
@inject IAuthService AuthService
@inject NavigationManager NavigationManager
@using MarketplaceBlazorApp.Shared

<h1>Login</h1>

@if (ShowErrors)
{
    <div class="alert alert-danger" role="alert">
        <p>@Error</p>
    </div>
}

<div class="card">
    <div class="card-body">
        <h5 class="card-title">Please enter your details</h5>
        <EditForm Model="@authModel" OnValidSubmit="HandleLogin">
            <DataAnnotationsValidator />
            <ValidationSummary />

            <div class="form-group">
                <label for="email">Email address</label>
                <InputText Id="email" Class="form-control" @bind-Value="authModel.Mail" />
                @*<ValidationMessage For="@(() => authModel.Mail)" />*@
            </div>
            <div class="form-group">
                <label for="password">Password</label>
                <InputText Id="password" type="password" Class="form-control" @bind-Value="authModel.Password" />
                @*<ValidationMessage For="@(() => authModel.Password)" />*@
            </div>
            <button class="btn btn-primary">Submit</button>
        </EditForm>
    </div>
</div>

@code {

    private AuthenticateModel authModel;
    private bool ShowErrors;
    private string Error = "";

    protected override async Task OnInitializedAsync()
    {
        authModel = new AuthenticateModel();
    }

    async void HandleLogin()
    {
        ShowErrors = false;

        var result = await AuthService.Login(authModel);

        if (result.Token != null)
        {
            NavigationManager.NavigateTo("/");
        }
        else
        {
            //Error = result.Error;
            Error = "error";
            //ShowErrors = true;
        }
    }

}