@page "/panel/showUsers"
@using MarketplaceBlazorApp.Shared
@inject HttpClient Http
@attribute [Authorize(Roles = "Admin")]

<h3>Kullanıcılar</h3>

@if (users == null)
{
    <p><em>Loading...</em></p>
}
else
{

    <a href="AddOrEditUser/0">Yeni kullanıcı ekle.</a>
    <table class="table">
        <thead>
            <tr>
                <th>UserID</th>
                <th>Ad Soyad</th>
                <th>TCKNO</th>
                <th>Mail</th>
                <th>Şifre</th>
                <th>Yetki</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in users)
            {
                <tr>
                    <td>@user.UserID</td>
                    <td>@(user.Name + " " + user.Surname)</td>
                    <td>@user.Tckno</td>
                    <td>@user.Mail</td>
                    <td>@user.Password</td>
                    <td>@user.Role</td>
                    <td><a href="@("AddOrEditUser/" +  user.UserID)">Düzenle</a></td>
                </tr>
            }
        </tbody>
    </table>

}

@code {
    private IEnumerable<UserModel> users;

    protected override async Task OnInitializedAsync()
    {
        users = await Http.GetJsonAsync<IEnumerable<UserModel>>("api/user/0");
    }
}
